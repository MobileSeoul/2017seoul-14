<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right">
    <include layout="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/layout_right_drawer"
        android:orientation="vertical" android:layout_width="264dp"
        android:layout_height="match_parent" android:layout_gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mymenu_logo"
                 />
            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                app:font="Regular"
                android:text="김세진"
                android:textColor="#FFFFFF"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/drawer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:textColor="#FFFFFF"
                app:font="Regular"
                android:text="kan02188@naver.com"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:paddingStart="17dp"
            android:paddingEnd="17dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_mywrite"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    app:font="Regular"
                    android:text="내가 쓴 글"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_like"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    app:font="Regular"
                    android:text="좋아요"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_pan"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    app:font="Regular"
                    android:text="게시판"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_seting"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_modify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="9dp"
                    app:font="Regular"
                    android:text="비밀번호 수정"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/logout"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    app:font="Regular"
                    android:text="로그아웃"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/a"
                    app:font="Regular"
                    android:text="서울로 안내소 : 02 . 313 . 7017"
                    android:layout_centerInParent="true"
                    android:textSize="11dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:font="Regular"
                    android:text="문의사항 : 010 . 1234 . 1234"
                    android:textSize="11dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>