<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/modName"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textCursorDrawable="@drawable/pink_cursor"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        app:font="Regular"
        android:paddingStart="15dp"
        android:hint="이름"
        android:inputType="textPersonName"
        android:padding="8dip"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText
        android:id="@+id/modPass"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textCursorDrawable="@drawable/pink_cursor"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:textSize="15dp"
        app:font="Regular"
        android:paddingStart="15dp"
        android:hint="새로운 비밀번호 (4자이상)"
        android:inputType="numberPassword"
        android:padding="8dip"
        android:textColor="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/modEmail" />

    <EditText
        android:id="@+id/modPassConf"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textCursorDrawable="@drawable/pink_cursor"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:textSize="15dp"
        app:font="Regular"
        android:paddingStart="15dp"
        android:hint="새로운 비밀번호 확인"
        android:inputType="numberPassword"
        android:padding="8dip"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/modPass" />

    <include
        layout="@layout/my_menu_toolbar"
        android:id="@+id/include2" />

    <EditText
        android:id="@+id/modEmail"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textCursorDrawable="@drawable/pink_cursor"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingStart="15dp"
        android:textSize="15dp"
        android:hint="이메일"
        app:font="Regular"
        android:inputType="textEmailAddress"
        android:padding="8dip"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/modName" />

    <Button
        android:id="@+id/modEnter"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/pink_back_btn"
        app:font="Regular"
        android:text="수 정 하 기"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/checkPassC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        app:font="Regular"
        android:text=" 비밀번호가 일치하지 않습니다"
        android:textColor="@color/colorPrimaryBtn"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/modPassConf"
        app:layout_constraintTop_toBottomOf="@+id/modPassConf" />

    <TextView
        android:id="@+id/checkPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        app:font="Regular"
        android:text=" 비밀번호는 4자리 입니다"
        android:textColor="@color/colorPrimaryBtn"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/modPass"
        app:layout_constraintTop_toBottomOf="@+id/modPass" />

    <TextView
        android:id="@+id/checkEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        app:font="Regular"
        android:text=" 아이디를 이메일 형식으로 입력해주세요"
        android:textColor="@color/colorPrimaryBtn"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/modEmail"
        app:layout_constraintTop_toBottomOf="@+id/modEmail" />

    <TextView
        android:id="@+id/checkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        app:font="Regular"
        android:text=" 이름이 올바르지 않습니다"
        android:textColor="@color/colorPrimaryBtn"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/modName"
        app:layout_constraintTop_toBottomOf="@+id/modName" />

</android.support.constraint.ConstraintLayout>